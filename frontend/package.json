{
  "name": "ton3s-frontend",
  "version": "2.0.0",
  "type": "module",
  "description": "TON3S - Privacy-focused writing application with NOSTR integration",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hypercoind/TON3S.git",
    "directory": "frontend"
  },
  "homepage": "https://ton3s.com",
  "bugs": {
    "url": "https://github.com/hypercoind/TON3S/issues"
  },
  "scripts": {
    "wasm:build": "cd wasm && wasm-pack build --release --target web --out-dir pkg",
    "wasm:dev": "cd wasm && wasm-pack build --dev --target web --out-dir pkg",
    "dev": "npm run wasm:dev && vite",
    "build": "npm run wasm:build && vite build",
    "preview": "vite preview",
    "generate-icons": "node scripts/generate-icons.js",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:update": "playwright test --update-snapshots",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "dexie": "^4.0.10",
    "qrcode-generator": "^2.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^4.0.17",
    "happy-dom": "^20.3.4",
    "sharp": "^0.34.5",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^0.21.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.17"
  }
}
