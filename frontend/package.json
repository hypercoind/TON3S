{
  "name": "ton3s-frontend",
  "version": "2.0.0",
  "type": "module",
  "description": "TON3S - Privacy-focused writing application with NOSTR integration",
  "scripts": {
    "wasm:build": "cd wasm && wasm-pack build --release --target web --out-dir pkg",
    "wasm:dev": "cd wasm && wasm-pack build --dev --target web --out-dir pkg",
    "dev": "npm run wasm:dev && vite",
    "build": "npm run wasm:build && vite build",
    "preview": "vite preview",
    "generate-icons": "node scripts/generate-icons.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@scure/base": "^1.1.1",
    "dexie": "^4.0.10"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@vitest/coverage-v8": "^4.0.17",
    "happy-dom": "^20.3.4",
    "sharp": "^0.34.5",
    "vite": "^6.0.0",
    "vite-plugin-pwa": "^0.21.0",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.17"
  }
}
