{
  "name": "ton3s",
  "version": "1.0.0",
  "private": true,
  "description": "TON3S - Privacy-focused writing application",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hypercoind/TON3S.git"
  },
  "homepage": "https://ton3s.com",
  "bugs": {
    "url": "https://github.com/hypercoind/TON3S/issues"
  },
  "type": "module",
  "scripts": {
    "version:check": "node scripts/versioning/check-app-version.mjs",
    "version:sync": "node scripts/versioning/sync-app-version.mjs",
    "version:bump": "node scripts/versioning/bump-app-version.mjs",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npm -C frontend test",
    "test:backend": "npm -C backend test",
    "test:e2e": "npm -C frontend run test:e2e",
    "test:e2e:update": "npm -C frontend run test:e2e:update",
    "test:watch": "npm -C frontend run test:watch",
    "test:coverage": "npm -C frontend run test:coverage && npm -C backend run test:coverage",
    "lint": "eslint frontend/src backend/src --ext .js",
    "lint:fix": "eslint frontend/src backend/src --ext .js --fix",
    "format": "prettier --write 'frontend/src/**/*.js' 'backend/src/**/*.js'",
    "format:check": "prettier --check 'frontend/src/**/*.js' 'backend/src/**/*.js'",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.4.0"
  }
}
