{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "indent": ["error", 4, { "SwitchCase": 1, "ignoredNodes": ["TemplateLiteral *", "CallExpression > ArrowFunctionExpression.arguments > CallExpression", "JSXElement *", "JSXAttribute"] }],
    "comma-dangle": ["error", "never"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs"],
    "no-var": "error",
    "prefer-const": "error",
    "prefer-template": "error",
    "no-throw-literal": "error"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/__tests__/**/*.js"],
      "env": {
        "vitest-globals/env": true
      },
      "plugins": ["vitest-globals"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ],
  "ignorePatterns": ["dist/", "node_modules/", "coverage/"]
}
